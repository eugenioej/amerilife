{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "typeRoots": ["./frontend/node_modules/@types"],
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "jsx": "react-jsx"
  },
  "include": ["lib/**/*", "types/**/*", "components/**/*", "app/**/*"]
}
